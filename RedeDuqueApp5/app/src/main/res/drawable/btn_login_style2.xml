<?xml version="1.0" encoding="utf-8"?>
<!-- Resize o arquivo layout_shadow_white.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:state_pressed="true"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"
            android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/corbotaoOn"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:state_pressed="false"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"
            android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1f398d"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:state_focused="true"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"
            android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/corbotaoOn"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
    <item android:state_focused="false"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"
            android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/corbotao"/>
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>


