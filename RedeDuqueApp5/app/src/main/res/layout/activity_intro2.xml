<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1f398d"
        tools:context=".IntroActivity2">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_intro_big"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.119" />

    <Button
            android:id="@+id/btnLoginMenu"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_login_style4"
            android:elevation="90dp"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
            android:id="@+id/txtCadastro"
            android:text="CADASTRE-SE"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginMenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>

    <TextView
            android:id="@+id/txtFaleConosco"
            android:text="FALE CONOSCO"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtCadastro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>

    <TextView
            android:id="@+id/txtParceiro"
            android:text="SEJA NOSSO PARCEIRO"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtFaleConosco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>